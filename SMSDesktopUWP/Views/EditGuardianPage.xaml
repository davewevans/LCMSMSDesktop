<Page
    x:Class="SMSDesktopUWP.Views.EditGuardianPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:SMSDesktopUWP.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="20" />
            <RowDefinition Height="*" />
            <RowDefinition Height="20" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="20" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="20" />
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Row="1" Grid.Column="1" Orientation="Vertical">
            <TextBlock
                Margin="10,20,0,0"
                VerticalAlignment="Center"
                Style="{StaticResource ListTitleStyle}"
                Text="First Name" />
            <TextBox
                x:Name="txtFirstName"
                Text="{x:Bind InGuardian.FirstName, Mode=TwoWay}"
                Margin="10,0,0,20"
                VerticalAlignment="Center"
                HorizontalAlignment="Left"
                Width="300" />

            <TextBlock
                Margin="10,20,0,0"
                VerticalAlignment="Center"
                Style="{StaticResource ListTitleStyle}"
                Text="Last Name" />
            <TextBox
                x:Name="txtLastName"
                Text="{x:Bind InGuardian.LastName, Mode=TwoWay}"
                Margin="10,0,0,20"
                VerticalAlignment="Center"
                HorizontalAlignment="Left"
                Width="300" />

            <TextBlock
                Margin="10,20,0,0"
                VerticalAlignment="Center"
                Style="{StaticResource ListTitleStyle}"
                Text="Location" />
            <TextBox
                x:Name="txtLocation"
                Text="{x:Bind InGuardian.Location, Mode=TwoWay}"
                Margin="10,0,0,20"
                VerticalAlignment="Center"
                HorizontalAlignment="Left"
                Width="300" />

            <TextBlock
                Margin="10,20,0,0"
                VerticalAlignment="Center"
                Style="{StaticResource ListTitleStyle}"
                Text="Entry Date" />
            <CalendarDatePicker
                Date="{x:Bind InGuardian.EntryDate}"
                Margin="10,0,0,20"
                Width="200"
                x:Name="dtEntryDate" />

            <StackPanel Orientation="Horizontal">
                <Button
                    x:Name="btnSave"
                    Margin="70,40, 0, 0"
                    Width="100"
                    Click="btnSave_Click"
                    Content="Save" />
                <Button
                    x:Name="btnCancel"
                    Margin="60,40,0,0"
                    Width="100"
                    Click="btnCancel_Click"
                    Content="Cancel" />
            </StackPanel>
        </StackPanel>

    </Grid>
</Page>
